{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "steward",
  "version": "0.1.0",
  "identifier": "com.steward.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Steward",
        "label": "toolbar",
        "width": 240,
        "height": 48,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "resizable": false,
        "fullscreen": false,
        "center": true,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "visible": true,
        "focus": false,
        "acceptFirstMouse": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
